@model ChatbotAdmin.Models.OutboxMessage

@{
    ViewData["Title"] = "ReplyChat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Reply Inquiry</h4>
<hr />
<br /><br />
<div class="row">
    <div class="col-md-4 text-left p-1"> @Html.DisplayNameFor(model => model.SenderEmail) : @Html.DisplayFor(model => model.SenderEmail)</div>
    <div class="col-md-4 text-left p-1">@Html.DisplayNameFor(model => model.SenderName) : @Html.DisplayFor(model => model.SenderName)</div>
    <div class="col-md-4 text-left p-1">@Html.DisplayNameFor(model => model.ReceivedDate) : @Html.DisplayFor(model => model.ReceivedDate)</div>
</div>
<div class="row border bg-light p-3">
    @Html.DisplayFor(model => model.Content)
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReplyChat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SenderEmail" />
            <input type="hidden" asp-for="SenderName" />
            <input type="hidden" asp-for="ReceivedDate" />
            <input type="hidden" asp-for="Content" />


            <div class="form-group">
                <label asp-for="ReplyMessage" class="control-label"></label>
                <textarea asp-for="ReplyMessage" class="control-label" rows="10" cols="100"></textarea>

                <span asp-validation-for="ReplyMessage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
